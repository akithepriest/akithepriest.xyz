---
import Layout from "./Layout.astro"

type Item = {
	styleClass: string
	value: string
}

const styleClasses = {
	str: "text-pink-400",
	object: "text-cyan-300",
	int: "text-purple-400",
}

const items: Item[] = [
	{ value: "'Programmer'", styleClass: styleClasses.str },
	{ value: "'Student'", styleClass: styleClasses.str },
	{ value: "Timezone(Asia.Calcutta)", styleClass: styleClasses.object },
	{ value: "17", styleClass: styleClasses.int },
]

const githubUrl = import.meta.env.PUBLIC_GITHUB_URL
---

<Layout>
	<div class="absolute bottom-0 right-0 p-2 text-fuchsia-400 font-mono group" title="This website is under construction">
		<div>localhost:4321</div>
		<div class="hidden group-hover:block group-focus:block absolute bottom-full right-0 mb-1 bg-gray-800 text-white text-sm p-2 rounded shadow-lg">
			This website is under construction
		</div>
	</div>
	<div class="flex flex-col justify-center items-center min-h-screen bg-[#0f0f1b] text-white gap-4 font-mono px-6 py-10 text-center">
		<div class="text-3xl sm:text-5xl pixelify-sans leading-tight">
			Hello, I am <span class="text-amber-400 animate-flicker drop-shadow-[0_0_6px_#facc15]">Aki</span>
		</div>

		<div class="text-base sm:text-xl text-neutral-300 flex flex-wrap justify-center gap-x-1 mt-2">
			@akithepriest :
			<span class="text-fuchsia-400"> [ </span>
			{items.map((v, i) => (
				<>
					<span class={v.styleClass}>{v.value}</span>
					{i < items.length - 1 && <span>, </span>}
				</>
			))}
			<span class="text-fuchsia-400"> ]</span>
		</div>

		<div class="flex">
			<a href={githubUrl} class="border-1 pl-2 pr-2 pt-1 pb-1 text-lg border-pink-400 hover:cursor-pointer hover:underline">./github</a>
		</div>
	</div>
</Layout>
